<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.boha.mymodule.app2.LifeCycleDemoActivity">

    <RelativeLayout
        android:id="@+id/AA_layout1"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text1"
            android:text="@string/title"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text2"
            android:layout_below="@id/text1"
            android:text="1"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="96sp"
            android:textColor="@color/absa_red"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/AA_layout2"
        android:layout_width="wrap_content"
        android:layout_below="@id/AA_layout1" android:layout_marginTop="0dp"
        android:background="@color/beige_pale"

        android:padding="10dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/AA_btn"
            android:text="Send WebSocket Messsage"
            android:layout_width="match_parent"
            android:textColor="@color/blue_dark1"
            android:layout_height="wrap_content" />


        </RelativeLayout>
    <ScrollView android:id="@+id/AA_layout3"
        android:layout_width="match_parent"
        android:layout_below="@id/AA_layout2" android:layout_marginTop="10dp"
        android:background="@color/white" android:padding="2dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/AA_text" android:padding="5dp"
            android:text="Server Communications"
            android:textColor="@color/absa_red"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
